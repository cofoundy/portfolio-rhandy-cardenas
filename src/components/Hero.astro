---
import { siteConfig } from "../config";
---

<div
  id="hero"
  class="relative min-h-screen bg-[#0a0f1e] flex items-center justify-center px-6 py-24"
>
  <!-- Subtle grid background -->
  <div class="absolute inset-0 opacity-[0.03]" style="background-image: linear-gradient(#3b82f6 1px, transparent 1px), linear-gradient(90deg, #3b82f6 1px, transparent 1px); background-size: 50px 50px;"></div>

  <!-- Gradient glow -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[600px] bg-[#3b82f6] opacity-10 blur-[120px] rounded-full"></div>

  <div class="relative max-w-4xl mx-auto text-center space-y-8">
    <!-- Profile Photo -->
    <div class="flex justify-center mb-8">
      <div class="w-32 h-32 rounded-full overflow-hidden ring-2 ring-[#334155] shadow-2xl">
        <img
          src={`${import.meta.env.BASE_URL}/profile.png`}
          alt={siteConfig.name}
          class="w-full h-full object-cover object-top"
          loading="eager"
        />
      </div>
    </div>

    <!-- Name -->
    <h1 class="text-5xl md:text-7xl font-bold text-[#e2e8f0] tracking-tight">
      {siteConfig.name}
    </h1>

    <!-- Title -->
    <p class="text-xl md:text-2xl text-[#60a5fa] font-medium">
      {siteConfig.title}
    </p>

    <!-- Affiliation -->
    <div class="flex flex-col items-center gap-2 text-[#94a3b8]">
      <div class="flex items-center gap-3 text-sm md:text-base">
        <span>Groupe Renault</span>
        <span class="text-[#334155]">×</span>
        <span>Université de Technologie de Compiègne</span>
      </div>
      <div class="text-sm text-[#64748b]">
        Heudiasyc UTC Laboratory
      </div>
    </div>

    <!-- Quick stats -->
    <div class="flex justify-center gap-8 pt-4 text-[#94a3b8]">
      <div class="flex flex-col items-center">
        <div class="text-2xl font-bold text-[#60a5fa]">IEEE TIV</div>
        <div class="text-xs">Published</div>
      </div>
      <div class="h-12 w-px bg-[#334155]"></div>
      <div class="flex flex-col items-center">
        <div class="text-2xl font-bold text-[#60a5fa]">2025</div>
        <div class="text-xs">Expected PhD</div>
      </div>
      <div class="h-12 w-px bg-[#334155]"></div>
      <div class="flex flex-col items-center">
        <div class="text-2xl font-bold text-[#60a5fa]">ADAS</div>
        <div class="text-xs">Research</div>
      </div>
    </div>

    <!-- Social links -->
    <div class="flex justify-center gap-6 pt-8">
      {
        siteConfig.social?.email && (
          <a
            href={`mailto:${siteConfig.social.email}`}
            class="group flex items-center gap-2 px-4 py-2 rounded-lg bg-[#1a1f2e] border border-[#334155] text-[#94a3b8] hover:border-[#3b82f6] hover:text-[#60a5fa] transition-all duration-300"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
              <path d="M3 7l9 6l9 -6" />
            </svg>
            <span class="text-sm font-medium">Email</span>
          </a>
        )
      }
      {
        siteConfig.social?.linkedin && (
          <a
            href={siteConfig.social.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="group flex items-center gap-2 px-4 py-2 rounded-lg bg-[#1a1f2e] border border-[#334155] text-[#94a3b8] hover:border-[#3b82f6] hover:text-[#60a5fa] transition-all duration-300"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M8 11v5" />
              <path d="M8 8v.01" />
              <path d="M12 16v-5" />
              <path d="M16 16v-3a2 2 0 1 0 -4 0" />
              <path d="M3 7a4 4 0 0 1 4 -4h10a4 4 0 0 1 4 4v10a4 4 0 0 1 -4 4h-10a4 4 0 0 1 -4 -4z" />
            </svg>
            <span class="text-sm font-medium">LinkedIn</span>
          </a>
        )
      }
      {
        siteConfig.social?.github && (
          <a
            href={siteConfig.social.github}
            target="_blank"
            rel="noopener noreferrer"
            class="group flex items-center gap-2 px-4 py-2 rounded-lg bg-[#1a1f2e] border border-[#334155] text-[#94a3b8] hover:border-[#3b82f6] hover:text-[#60a5fa] transition-all duration-300"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" />
            </svg>
            <span class="text-sm font-medium">GitHub</span>
          </a>
        )
      }
    </div>

    <!-- Scroll indicator -->
    <div class="pt-16 animate-bounce">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="mx-auto text-[#64748b]"
      >
        <path d="M12 5v14" />
        <path d="M19 12l-7 7-7-7" />
      </svg>
    </div>
  </div>
</div>
